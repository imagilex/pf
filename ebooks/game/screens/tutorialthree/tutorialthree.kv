#: import hex kivy.utils.get_color_from_hex
#: import Gradient kivy_gradient.Gradient

<TutorialThree>

    FloatLayout:
        size_hint: 1, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

        canvas:
            Color:
                rgba: hex('#23cf56')
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Floatlayout'
            color: 'white'
            bold: True
            pos_hint: {'center_x': 0.1, 'center_y': 0.8}

        Label:
            text: 'Floatlayout'
            color: 'white'
            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            text: 'Floatlayout'
            color: 'white'
            bold: True
            pos_hint: {'center_x': 0.8, 'center_y': 0.2}

    MDFloatLayout:
        size_hint: 1, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        md_bg_color: 'skyblue'

    MDFloatLayout:
        size: self.width, self.height
        md_bg_color: 'skyblue'

        FloatLayout:
            size_hint: 0.25, None
            height: self.width
            pos_hint: {'center_x': 0.2, 'center_y': 0.8}

            canvas:
                Color:
                    rgba: 1, 1, 1, 1

                Rectangle:
                    pos: self.pos
                    size: self.size

        FloatLayout:
            size_hint: 0.25, None
            height: self.width
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

            canvas:
                Color:
                    rgba: 1, 1, 1, 1

                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: 10, 20, 30, 40

        FloatLayout:
            size_hint: 0.25, None
            height: self.width
            pos_hint: {'center_x': 0.8, 'center_y': 0.8}

            canvas:
                Color:
                    rgba: 1, 1, 1, 1

                Ellipse:
                    pos: self.pos
                    size: self.size

        FloatLayout:
            size_hint: 0.3, None
            height: self.width
            pos_hint: {'center_x': 0.25, 'center_y': 0.5}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.75
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    blur_radius: 35
                    border_radius: 15, 30, 45, 60

            canvas:
                Color:
                    rgba: 1, 1, 1, 1

                Rectangle:
                    pos: self.pos
                    size: self.size

        FloatLayout:
            size_hint: 0.3, None
            height: self.width
            pos_hint: {'center_x': 0.75, 'center_y': 0.5}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.75
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    blur_radius: 35
                    border_radius: 15, 30, 45, 60

            canvas:
                Color:
                    rgba: 1, 1, 1, 1

                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: 10, 20, 30, 40

        FloatLayout:
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.25, 'center_y': 0.2}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.35
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    blur_radius: 35
                    border_radius: 10, 10, 10, 10

            canvas:
                Color:
                    rgba: 1, 1, 1, 1

                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: 10, 10, 10, 10
                    texture: Gradient.horizontal(hex('#7b4397'), hex('#dc2430'))

        FloatLayout:
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.75, 'center_y': 0.2}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.35
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    blur_radius: 35
                    border_radius: 10, 10, 10, 10

            canvas:
                Color:
                    rgba: 1, 1, 1, 1

                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: 10, 10, 10, 10
                    texture: Gradient.vertical(hex('#43cea2'), hex('#185a9b'))
